<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.welcome.sellrentproperty.views.addproperty.propertydetails.PropertyDetailsForm">

    <!-- Toolbar with back button and title -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Property Details"
        app:titleTextColor="@android:color/white"
        app:navigationIcon="@drawable/arrow_back"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">


    </com.google.android.material.appbar.MaterialToolbar>

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/nextButton"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Property Type Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Property Type"
                android:textColor="?attr/colorOnSurface"
                android:textSize="14sp"
                android:textStyle="bold" />
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:fillViewport="true">
            <LinearLayout
                android:id="@+id/properyLayout"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:padding="5dp"
                android:background="@color/white"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <!-- Apartment -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardApartment"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="8dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="0dp"
                    android:backgroundTint="@color/colorSecondary"
                android:background="@drawable/card_selected_background"
                android:clickable="true"
                android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_apartment"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Apartment"
                            android:textAlignment="center"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="11sp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Independent Floor -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardIndependentFloor"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="8dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="0dp"
                    android:backgroundTint="@color/colorSecondary"
                    android:background="@drawable/card_selected_background"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_floor"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Independent Floor"
                            android:textAlignment="center"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="11sp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Independent House -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardIndependent"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="8dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="0dp"
                    android:backgroundTint="@color/colorSecondary"
                    android:background="@drawable/card_selected_background"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_house" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Independent House"
                            android:textAlignment="center"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="11sp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Villa -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardVilla"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    app:cardElevation="0dp"
                    app:strokeWidth="0dp"
                    android:backgroundTint="@color/colorSecondary"
                    android:background="@drawable/card_selected_background"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_villa" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Villa"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="12sp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
            </HorizontalScrollView>
            <!-- Building/Project/Society Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Building/ Project/ Society (Optional)"
                android:textColor="?attr/colorOnSurface"
                android:textSize="14sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/buildingEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Building / Project / Society"
                    android:inputType="text"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Locality Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Locality"
                android:textColor="?attr/colorOnSurface"
                android:textSize="14sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/localityEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Locality"
                    android:inputType="text"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Locality is updated as per building information in our database"
                android:textColor="?attr/colorOnSurface"
                android:textSize="12sp" />

            <!-- BHK Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="BHK"
                android:textColor="?attr/colorOnSurface"
                android:textSize="14sp"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <!-- 1 RK -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/oneRk"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="8dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="0dp"
                        android:backgroundTint="@color/colorSecondary"
                        android:background="@drawable/card_selected_background"
                        android:clickable="true"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1 RK"
                                android:textColor="?attr/colorOnSurface"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- 1 BHK -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/oneBhk"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="8dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="0dp"
                        android:backgroundTint="@color/colorSecondary"
                        android:background="@drawable/card_selected_background"
                        android:clickable="true"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1 BHK"
                                android:textColor="?attr/colorOnSurface"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- 1.5 BHK -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/onepfiveBhk"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="8dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="0dp"
                        android:backgroundTint="@color/colorSecondary"
                        android:background="@drawable/card_selected_background"
                        android:clickable="true"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1.5 BHK"
                                android:textColor="?attr/colorOnSurface"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- 2 BHK -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/twoBhk"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="8dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="0dp"
                        android:backgroundTint="@color/colorSecondary"
                        android:background="@drawable/card_selected_background"
                        android:clickable="true"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2 BHK"
                                android:textColor="?attr/colorOnSurface"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- 2.5 BHK -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/twopfiveBhk"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="8dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="0dp"
                        android:backgroundTint="@color/colorSecondary"
                        android:background="@drawable/card_selected_background"
                        android:clickable="true"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2.5 BHK"
                                android:textColor="?attr/colorOnSurface"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- 3 BHK -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/threeBhk"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="8dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="0dp"
                        android:backgroundTint="@color/colorSecondary"
                        android:background="@drawable/card_selected_background"
                        android:clickable="true"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3 BHK"
                                android:textColor="?attr/colorOnSurface"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- 3.5 BHK -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/threepfiveBhk"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="8dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="0dp"
                        android:backgroundTint="@color/colorSecondary"
                        android:background="@drawable/card_selected_background"
                        android:clickable="true"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3.5 BHK"
                                android:textColor="?attr/colorOnSurface"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- 4 BHK -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/fourBhk"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="8dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="0dp"
                        android:backgroundTint="@color/colorSecondary"
                        android:background="@drawable/card_selected_background"
                        android:clickable="true"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4 BHK"
                                android:textColor="?attr/colorOnSurface"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- 4.5 BHK -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/fourpfiveBhk"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="8dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="0dp"
                        android:backgroundTint="@color/colorSecondary"
                        android:background="@drawable/card_selected_background"
                        android:clickable="true"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4.5 BHK"
                                android:textColor="?attr/colorOnSurface"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- 5 BHK -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/fiveBhk"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="8dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="0dp"
                        android:backgroundTint="@color/colorSecondary"
                        android:background="@drawable/card_selected_background"
                        android:clickable="true"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5 BHK"
                                android:textColor="?attr/colorOnSurface"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>
            </HorizontalScrollView>


            <!-- Built Up Area Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Built Up Area"
                android:textColor="?attr/colorOnSurface"
                android:textSize="14sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/areaEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Area (in sq. ft.)"
                    android:inputType="number"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Furnish Type Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Furnish Type"
                android:textColor="?attr/colorOnSurface"
                android:textSize="14sp"
                android:textStyle="bold" />
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:fillViewport="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <!-- Fully Furnished -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/fullyFurnished"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="8dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="0dp"
                    android:backgroundTint="@color/colorSecondary"
                    android:background="@drawable/card_selected_background"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:src="@drawable/ic_fully_furnished"
                            android:layout_marginEnd="5dp"
                            android:layout_height="20dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fully Furnished"
                            android:textColor="@color/black"
                            android:textSize="12sp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Semi Furnished -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/semiFurnished"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="8dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="0dp"
                    android:backgroundTint="@color/colorSecondary"
                    android:background="@drawable/card_selected_background"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:src="@drawable/ic_semi_furnished"
                            android:layout_height="20dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Semi Furnished"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="12sp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Unfurnished -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/unfurnished"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="8dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="0dp"
                    android:backgroundTint="@color/colorSecondary"
                    android:background="@drawable/card_selected_background"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:src="@drawable/ic_unfurnished"
                            android:layout_height="20dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Unfurnished"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="12sp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
            </HorizontalScrollView>
            <!-- Share listing checkbox -->
            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/shareCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Share listing information with agents"
                android:textColor="?attr/colorOnSurface"
                android:textSize="14sp" />

        </LinearLayout>
    </ScrollView>

    <!-- Next Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/nextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:backgroundTint="?attr/colorPrimary"
        android:padding="12dp"
        android:text="Next: Add Price Details"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>